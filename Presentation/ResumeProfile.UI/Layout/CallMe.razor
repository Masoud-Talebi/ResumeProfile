@using ResumeProfile.UI.Models.ApplicationSettingDtos
<section id="contact" class="container section-padding slide-up" data-delay="0.4">
    <h2>در تماس باشید</h2>
    <div class="contact-content">
        <form id="contact-form" action="#" method="POST">
            <label for="name">نام:</label>
            <input type="text" id="name" name="name" required placeholder="نام کامل شما">

            <label for="email">ایمیل:</label>
            <input type="email" id="email" name="email" required placeholder="example@domain.com">

            <label for="message">پیام:</label>
            <textarea id="message" name="message" rows="5" required placeholder="پیام خود را اینجا بنویسید..."></textarea>

            <button type="submit" class="button-primary">ارسال پیام</button>
            <p id="form-message" aria-live="polite"></p>
        </form>
        @if (Settings == null)
        {
            <div class="loading">در حال بارگذاری ...</div>
        }
        else
        {
            <div class="social-links">
                <h3>من را آنلاین پیدا کنید</h3>
                <a href="https://linkedin.com/in/" target="_blank" rel="noopener noreferrer" aria-label="پروفایل لینکدین">
                    <i class="fab fa-linkedin-in"></i>
                </a>
                <a href="https://github.com/" target="_blank" rel="noopener noreferrer" aria-label="پروفایل گیت‌هاب">
                    <i class="fab fa-github"></i>
                </a>
                <a href="mailto:@Settings.Email" aria-label="ارسال ایمیل به سارا احمدی">
                    <i class="fas fa-envelope"></i>
                </a>
            </div>

        }
        

        
    </div>
</section>
@code {
    [Parameter]
    public ApplicationSettingDto Settings { get; set; } = default!;
}
