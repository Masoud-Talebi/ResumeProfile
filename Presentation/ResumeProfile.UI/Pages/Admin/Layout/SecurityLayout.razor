@using Microsoft.AspNetCore.Components.Authorization
@inject AuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider

<section id="security" class="content-section p-4 bg-light rounded shadow-sm">
    <h2 class="mb-4">امنیت برنامه</h2>

    <EditForm Model="@updateModel" OnValidSubmit="Handle">
        <DataAnnotationsValidator />
        <ValidationSummary class="text-danger" />

        <div class="mb-3">
            <label class="form-label">رمز عبور فعلی</label>
            <InputText type="password" class="form-control" @bind-Value="updateModel.CurrentPassword" />
        </div>

        <div class="mb-3">
            <label class="form-label">نام کاربری جدید (اختیاری)</label>
            <InputText class="form-control" @bind-Value="updateModel.NewUserName" />
        </div>

        <div class="mb-3">
            <label class="form-label">رمز عبور جدید (اختیاری)</label>
            <InputText type="password" class="form-control" @bind-Value="updateModel.NewPassword" @bind-Value:event="oninput" />

            <ul class="list-unstyled mt-2">
                <li><i class="@GetIcon(updateModel.NewPassword?.Length >= 8) me-1"></i> حداقل 8 کاراکتر</li>
                <li><i class="@GetIcon(updateModel.NewPassword?.Any(char.IsUpper) == true) me-1"></i> حداقل یک حرف بزرگ</li>
                <li><i class="@GetIcon(updateModel.NewPassword?.Any(char.IsDigit) == true) me-1"></i> حداقل یک عدد</li>
            </ul>
        </div>

        <button type="submit" class="btn btn-primary">به‌روزرسانی</button>

        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="mt-3 alert @MessageClass">@Message</div>
        }
    </EditForm>
</section>

@code {
    private UpdateAccountDto updateModel = new()
    {
        CurrentPassword = string.Empty,
        NewPassword = string.Empty,
        NewUserName = string.Empty
    };

    private string Message = string.Empty;
    private string MessageClass = "";

    private string GetIcon(bool condition) => condition ? "bi bi-check-circle text-success" : "bi bi-x-circle text-danger";

    private async Task Handle()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userIdClaim = user?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if (userIdClaim == null)
            {
                Message = "کاربر شناسایی نشد.";
                MessageClass = "alert-danger";
                return;
            }

            updateModel.UserId = long.Parse(userIdClaim.Value);

            var result = await AuthService.ChangePassword(updateModel);

            if (result?.Success == true)
            {
                Message = "اطلاعات با موفقیت به‌روزرسانی شد.";
                MessageClass = "alert-success";
            }
            else
            {
                Message = result?.ErrorMessage ?? "خطای ناشناخته";
                MessageClass = "alert-danger";
            }

            updateModel.CurrentPassword = string.Empty;
            updateModel.NewPassword = string.Empty;
            updateModel.NewUserName = string.Empty;
        }
        catch (Exception ex)
        {
            Message = $"خطایی رخ داد: {ex.Message}";
            MessageClass = "alert-danger";
        }
    }
}
